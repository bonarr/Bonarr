<div class="modal-content">
    <div class="log-details-modal">
        <div class="modal-header">
            <button type="button" class="close x-close" aria-hidden="true"><i class="icon-sonarr-close-modal"></i></button>

            <h3>Details</h3>

        </div>
        <div class="modal-body">
            Message
            <pre>{{message}}</pre>

            {{#if exception}}
                <br/>
                Exception
                <pre>{{exception}}</pre>
            {{/if}}
        </div>
        <div class="modal-footer">
            <button class="btn x-close">Close</button>
        </div>
    </div>
</div>
