<div class="form-group">
    <label class="col-sm-3 control-label">Name</label>

    <div class="col-sm-9 col-md-7 col-lg-5">
        <input type="text" name="name" class="form-control">
    </div>
</div>

<hr>

<div class="form-group">
    <label class="col-sm-3 control-label">Language</label>

    <div class="col-sm-9 col-md-7 col-lg-5">
        <select class="form-control" name="language">
            {{#each languages}}
                {{#unless_eq nameLower compare="unknown"}}
                    <option value="{{nameLower}}">{{name}}</option>
                {{/unless_eq}}
            {{/each}}
        </select>
        <span class="help-block">Series assigned this profile will be look for episodes with the selected language</span>
    </div>
</div>

<div class="form-group">
    <label class="col-sm-3 control-label">Cutoff</label>

    <div class="col-sm-9 col-md-7 col-lg-5">
        <select class="form-control x-cutoff" name="cutoff.id" validation-name="cutoff">
            {{#each items}}
            {{#if allowed}}
            <option value="{{quality.id}}">{{quality.name}}</option>
            {{/if}}
            {{/each}}
        </select>
        <span class="help-block">Once this quality is reached Sonarr will no longer download episodes</span>
    </div>
</div>
