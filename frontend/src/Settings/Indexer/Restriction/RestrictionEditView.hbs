<div class="fullscreen-modal">
    <div class="fullscreen-modal-header">
        <button type="button" class="close x-close"><i class="icon-sonarr-close-modal"></i></button>
        {{#if id}}
            <h3>Edit Restriction</h3>
        {{else}}
            <h3>Add Restriction</h3>
        {{/if}}
    </div>
    <div class="fullscreen-modal-body remotepath-mapping-modal">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-3 control-label">Must contain</label>
                <div class="col-sm-9 col-md-7 col-lg-5">
                    <input type="text" name="required" class="form-control x-required"/>
                    <span class="help-block">The release must contain at least one of these terms (case insensitive)</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">Must not contain</label>
                <div class="col-sm-9 col-md-7 col-lg-5">
                    <input type="text" name="ignored" class="form-control x-ignored"/>
                    <span class="help-block">The release will be rejected if it contains one or more of terms (case insensitive)</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">Tags</label>
                <div class="col-sm-9 col-md-7 col-lg-5">
                    <input type="text" class="form-control x-tags">
                    <span class="help-block">Restrictions will apply to series with more or more matching tags. Leave blank to apply to all series</span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{#if id}}
            <button class="btn btn-danger pull-left x-delete">Delete</button>
        {{/if}}

        <button class="btn x-close">Cancel</button>

        <div class="btn-group">
            <button class="btn btn-primary x-save">Save</button>
        </div>
    </div>
</div>