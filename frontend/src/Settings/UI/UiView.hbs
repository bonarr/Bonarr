<div class="form-horizontal">
    <fieldset>
        <legend>Calendar</legend>

        <div class="form-group">
            <label class="settings-label control-label">First Day of Week</label>
            <div class="settings-control">
                <select name="firstDayOfWeek" class="form-control">
                    <option value="0">Sunday</option>
                    <option value="1">Monday</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="settings-label control-label">Week Column Header</label>
            <div class="settings-control">
                <select name="calendarWeekColumnHeader" class="form-control">
                    <option value="ddd M/D">Tue 3/25</option>
                    <option value="ddd MM/DD">Tue 03/25</option>
                    <option value="ddd D/M">Tue 25/3</option>
                    <option value="ddd DD/MM">Tue 25/03</option>
                </select>
                <span class="help-block">Shown above each column when week is the active view</span>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Dates</legend>

        <div class="form-group">
            <label class="settings-label control-label">Short Date Format</label>
            <div class="settings-control">
                <select name="shortDateFormat" class="form-control">
                    <option value="MMM D YYYY">Mar 5 2014</option>
                    <option value="DD MMM YYYY">5 Mar 2014</option>
                    <option value="MM/D/YYYY">03/5/2014</option>
                    <option value="MM/DD/YYYY">03/05/2014</option>
                    <option value="DD/MM/YYYY">25/03/2014</option>
                    <option value="YYYY-MM-DD">2014-03-05</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="settings-label control-label">Long Date Format</label>

            <div class="settings-control">
                <select name="longDateFormat" class="form-control">
                    <option value="dddd, MMMM D YYYY">Tuesday, March 25, 2014</option>
                    <option value="dddd, D MMMM YYYY">Tuesday, 25 March, 2014</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="settings-label control-label">Time Format</label>

            <div class="settings-control">
                <select name="timeFormat" class="form-control">
                    <option value="h(:mm)a">5pm/5:30pm</option>
                    <option value="HH:mm">17:00/17:30</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="settings-label control-label">Show Relative Dates</label>
            <div class="settings-control">
                <div class="checkbox c-checkbox">
                    <label>
                        <input type="checkbox" name="showRelativeDates">
                        <span class="check fa fa-check"></span>
                        <span class="help-block">Show relative (Today/Yesterday/etc) or absolute dates</span>
                    </label>
                </div>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <legend>Style</legend>

        <div class="form-group">
            <label class="settings-label control-label">Enable Color-Impaired mode</label>
            <div class="settings-control">
                <div class="checkbox c-checkbox">
                    <label>
                        <input type="checkbox" name="enableColorImpairedMode">
                        <span class="check fa fa-check"></span>
                        <span class="help-block">Altered style to allow color-impaired users to better distinguish color coded information</span>
                    </label>
                </div>
            </div>
        </div>
    </fieldset>
</div>
