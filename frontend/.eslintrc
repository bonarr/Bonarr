{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "es6": true
  },

  "globals": {
    "expect": false,
    "chai": false,
    "sinon": false,

    "__VERSION__": false,
    "__DEV__": false,
    "__BUNDLED__": false,
    "__HOSTED__": false,
    "__COLORIZE_LOGS__": false,
    "__ERROR_TRACKER_ID__": false,
    "__GOOGLE_ANALYTICS_ID__": false,
    "__DEFAULT_LINK_TARGET__": false,
    "__MIN_SERVER_VERSION__": false
  },

  "ecmaFeatures": {
    "modules": true
  },

  "rules": {
    "strict": 0,

    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow-restricted-names": 2,
    "no-shadow": 2,
    "no-undef-init": 2,
    "no-undef": 2,
    "no-unused-vars": [2, {
      "vars": "local",
      "args": "none"
    }],

    "comma-dangle": 2,
    "no-console": 0,
    "no-constant-condition": 2,
    "no-debugger": 0,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": [2, "functions"],
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "no-unexpected-multiline": 2,

    "block-scoped-var": 2,
    "dot-notation": 2,
    "eqeqeq": [2, "allow-null"],
    "no-alert": 0,
    "no-caller": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implicit-coercion": [2, { "boolean": false }],
    "no-implied-eval": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal-escape": 2,
    "no-octal": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-void": 2,
    "no-with": 2,
    "radix": 2,
    "wrap-iife": [2, "any"],
    "yoda": 2,

    "array-bracket-spacing": 2,
    "block-spacing": 2,
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-spacing": 2,
    "computed-property-spacing": 2,
    "consistent-this": [2, "self"],
    "eol-last": 2,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "new-parens": [2, { "capIsNew": false }],
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [2, { "max": 1 }],
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-unneeded-ternary": 2,
    "object-curly-spacing": [2, "always"],
    "one-var": [2, "never"],
    "operator-linebreak": [2, "after", { "overrides": { "?": "after" } }],
    "quotes": [2, "single"],
    "semi-spacing": 2,
    "semi": 2,
    "space-after-keywords": 2,
    "space-before-keywords": [2, "always"],
    "space-before-blocks": 2,
    "space-in-parens": 2,
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": 2,
    "spaced-comment": 2,

    "arrow-parens": 2,
    "arrow-spacing": 2,
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "prefer-const": 2
  }
}
